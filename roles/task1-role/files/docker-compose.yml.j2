version: '{{ docker_compose_version }}'

services:
  app:
    build:
      context: ./app
      dockerfile: Dockerfile
    image: {{ docker_app_image }}
    container_name: {{ app_name }}-app
    restart: unless-stopped
    env_file:
      - ./app/.env
    environment:
      - APP_PORT={{ app_port }}
      - FLASK_ENV=production
    volumes:
      - ./app/logs:{{ docker_volumes.app_logs }}
      - ./app/data:{{ docker_volumes.app_data }}
    networks:
      - {{ docker_network }}
    labels:
      - "traefik.enable=false"

  nginx:
    build:
      context: ./nginx
      dockerfile: Dockerfile
    image: {{ docker_nginx_image }}
    container_name: {{ app_name }}-nginx
    restart: unless-stopped
    ports:
      - "{{ docker_ports.nginx_host }}:{{ docker_ports.nginx_container }}"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
      - ./nginx/logs:{{ docker_volumes.nginx_logs }}
    depends_on:
      - app
    networks:
      - {{ docker_network }}
    labels:
      - "traefik.enable=true"

networks:
  {{ docker_network }}:
    driver: bridge

volumes:
  app_data:
  nginx_logs:
